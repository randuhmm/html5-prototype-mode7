{
  "name": "html5-prototype-mode7",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "repository": "https://github.com/todo",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "bower": "^1.7.7",
    "browserify": "^13.1.1",
    "browserify-shim": "^3.8.12",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.8",
    "karma-junit-reporter": "^0.4.1",
    "uglify-js": "^2.7.3",
    "watchify": "^3.8.0"
  },
  "browserify-shim": {
    "puremvc": "global:puremvc"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "scripts": {
    "postinstall": "bower install && cp -R ./dist/lib/minibot-engine/dist/minibot-browser.* ./dist/browser/js/lib",
    "prestart": "npm install",
    "start": "http-server -a 0.0.0.0 -p 8000 -c-1 ./dist/browser",
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js",
    "build-loader": "browserify -x minibot -x puremvc -r ./src/loader.js:loader -t babelify --outfile ./dist/loader.js",
    "build-app": "browserify -x minibot -x puremvc -r ./src/app.js:app -t babelify --outfile ./dist/app.js",
    "watch-app": "watchify -v -r ./src/app.js:app -t babelify --outfile ./dist/app.js",
    "minify-app": "uglifyjs dist/app.js -o dist/app.min.js"
  }
}
